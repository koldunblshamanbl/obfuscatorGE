<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.obfuscatorge.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Obfuscator GE">
        <font>
            <Font size="48.0"/>
        </font>
    </Label>
    <Button fx:id="fileSelectionButton" text="Choose file(-s)" onAction="#selectFiles"/>
    <Button fx:id="obfuscationButton" text="Obfuscate" disable="true" onAction="#obfuscateFiles"/>
    <Button text="Exit" onAction="#exit"/>
</VBox>
